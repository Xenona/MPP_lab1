<!DOCTYPE html>
<html>
<head>
    <title>Список задач</title>
    <link rel="stylesheet" href="/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
</head>
<body>
    <h1>Список задач</h1>

    <form action="/add" method="post">
        <input type="text" name="title" placeholder="Название задачи" required>
        <input type="date" name="dueDate" required>
        <button type="submit">Добавить</button>
    </form>

    <div>
        <a href="/">Все</a> |
        <a href="/?status=completed">Выполненные</a> |
        <a href="/?status=pending">В ожидании</a>
    </div>

    <div id="taskList">
        <% tasks.forEach(task => { %>
            <div class="task <%= task.completed ? 'completed' : '' %>" data-id="<%= task.id %>">
                <h2><%= task.title %></h2>
                <p>Дата завершения: <%= task.dueDate %></p>
                <% if (task.attachments && task.attachments.length > 0) { %>
                    <p>Вложения:</p>
                    <ul>
                        <% task.attachments.forEach(attachment => { %>
                            <li><a href="/download/<%= attachment %>"><%= attachment %></a></li>
                        <% }) %>
                    </ul>
                <% } %>
                <form action="/complete/<%= task.id %>" method="post">
                    <button type="submit" <%= task.completed ? 'disabled' : '' %>>Выполнено</button>
                </form>
                <form action="/upload/<%= task.id %>" method="post" enctype="multipart/form-data">
                    <input type="file" name="attachment">
                    <button type="submit">Прикрепить файл</button>
                </form>
            </div>
        <% }) %>
    </div>

    <script>
        const taskList = document.getElementById('taskList');

        if (taskList) {
            new Sortable(taskList, {
                animation: 150,
                onEnd: function (evt) {
                    const newOrder = Array.from(taskList.children).map(item => parseInt(item.dataset.id));

                    fetch('/update-order', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ order: newOrder })
                    })
                    .then(response => {
                        if (!response.ok) {
                            console.error('Failed to update order');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
                }
            });
        }
    </script>
</body>
</html>